<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashish.cinemahub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieStreamingApp">
        <activity android:name="com.ashish.cinemahub.main.activities.AllActivity"/>
        <activity android:name="com.ashish.cinemahub.main.activities.SearchActivity" />
        <activity android:name="com.ashish.cinemahub.main.activities.TVShowDetailsActivity" />
        <activity android:name="com.ashish.cinemahub.main.activities.MovieDetailsActivity" />
        <activity android:name="com.ashish.cinemahub.main.activities.MainActivity" />
        <activity android:name="com.ashish.cinemahub.main.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>